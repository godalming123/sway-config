
##################
# MY SWAY CONFIG #
##################

# =====================
# ===== VARIABLES =====
# =====================

# === GENERAL ===
set $mod Mod4
set $term alacritty

# === WORKSPACES ===
set $ws1 "1. general"
set $ws2 "2. web"
set $ws3 "3. development"
set $ws4 "4. virtualisation"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

# === COLORS ===
set $text-color            #ffffff
set $faded-text-color      #a3a3a3
set $separator-color       #212121
set $bg-color              #2f343f
set $alt-bg-color          #1c1f26
set $urgent-color          #ef3510
set $accent-color          #0c6d46
set $faded-accent-color    #063522

# ====================
# ===== SETTINGS =====
# ====================

# === GENERAL ===
floating_modifier $mod
workspace_layout tabbed
title_align center
font pango:monospace 8 # Font for window titles, will also be used by the bar
#output * bg datadir/backgrounds/sway/Sway_Wallpaper_Blue_1920x1080.png fill

# === GAPS ===
gaps inner 0
gaps outer 0

# === INPUTS ===
input "type:touchpad" {
	dwt enabled
	tap enabled
	natural_scroll enabled
	middle_emulation enabled
}

# ===================
# ===== TOP BAR =====
# ===================

# === COLORS ===      | border             | background       | text             | indicator
client.focused          $bg-color            $bg-color          $text-color        $accent-color
client.unfocused        $alt-bg-color        $alt-bg-color      $faded-text-color  $faded-accent-color
client.focused_inactive $alt-bg-color        $alt-bg-color      $faded-text-color  $faded-accent-color
client.urgent           $urgent-color        $urgent-color      $text-color        $urgent-color

# === SETTINGS ===
bar {
    position top

    # When the status_command prints a new line to stdout, swaybar updates.
    # The default just shows the current date and time.
    status_command while date +'%d/%m/%y %H:%M'; do sleep 1; done

    colors {
        statusline $text-color
        background $bg-color
        inactive_workspace $bg $bg $bg
    }
}

# =======================
# ===== KEYBINDINGS =====
# =======================

# === SLEEP/SUSPEND ===
bindsym $mod+x exec swaylock --color "$bg-color" & systemctl suspend

# === ADJUST VOLUME ===
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +10%
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -10%
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle
bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle

# === OPEN TERMINAL ===
bindsym $mod+Return exec $term

# === KILL FOCUSED ===
bindsym $mod+q kill

# === CHANGE FOCUSED ===

# USING W, A, S, D
bindsym $mod+a focus left
bindsym $mod+s focus down
bindsym $mod+w focus up
bindsym $mod+d focus right

# USING ARROW KEYS
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# === MOVE FOCUSED ===

# USING W, A, S, D
bindsym $mod+Shift+a move left
bindsym $mod+Shift+s move down
bindsym $mod+Shift+w move up
bindsym $mod+Shift+d move right

# USING ARROW KEYS
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# === SPLIT ===
bindsym $mod+h split h # HORIZONTALLY
bindsym $mod+v split v # VERTICALLY

# === FULLSCREEN FOCUSED ===
bindsym $mod+f fullscreen toggle

# === CHANGE CONTAINER LAYOUT ===
bindsym $mod+k layout tabbed
bindsym $mod+l layout toggle split

# === TOGGLE FLOATING ===
bindsym $mod+Shift+f floating toggle

# === TOGGLE FLOATING FOR FOCUSED ===
#bindsym $mod+f focus mode_toggle

# === FOCUS PARENT ===
#bindsym $mod+p focus parent

# === FOCUS CHILD ===
#bindsym $mod+c focus child

# === SWITCH WORKSPACE ===
bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number $ws6
bindsym $mod+7 workspace number $ws7
bindsym $mod+8 workspace number $ws8
bindsym $mod+9 workspace number $ws9
bindsym $mod+0 workspace number $ws10

# === MOVE FOCUSED CONTAINER TO WORKSPACE ===
bindsym $mod+Shift+1 move container to workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5
bindsym $mod+Shift+6 move container to workspace number $ws6
bindsym $mod+Shift+7 move container to workspace number $ws7
bindsym $mod+Shift+8 move container to workspace number $ws8
bindsym $mod+Shift+9 move container to workspace number $ws9
bindsym $mod+Shift+0 move container to workspace number $ws10

# === RELOAD SWAY ===
bindsym $mod+c reload # reload config
bindsym $mod+Shift+r restart # restart sway

# === EXIT SWAY ===
bindsym $mod+Shift+e exec "swaymsg exit"

# === RESIZE WINDOW ===
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym a resize shrink width 10 px or 10 ppt
        bindsym w resize grow height 10 px or 10 ppt
        bindsym s resize shrink height 10 px or 10 ppt
        bindsym d resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape or $mod+r
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+r mode "default"
}
bindsym $mod+r mode "resize"
